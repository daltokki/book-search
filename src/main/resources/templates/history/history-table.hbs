<table class="table table-hover">
  <input type="hidden" id="size" name="size" value="{{condition.size}}">
  <input type="hidden" id="page" name="page" value="{{condition.page}}">
  <caption>Total <kbd>{{#if page.content}}{{number page.totalElements}}{{else}}0{{/if}}</kbd> rows</caption>
  <colgroup>
    <col width="10%">
    <col width="18%">
    <col width="14%">
    <col width="14%">
    <col width="14%">
    <col width="14%">
  </colgroup>
  <thead>
  <tr class="text-center">
    <th scope="col">검색항목</th>
    <th scope="col">검색내용</th>
    <th scope="col">검색일자</th>
    <th scope="col">대분류</th>
    <th scope="col">중분류</th>
    <th scope="col">정렬</th>
  </tr>
  </thead>
  <tbody>
  {{#if page.content}}
    {{#each page.content}}
      <tr class="align-middle">
        <td class="text-center">{{bookSearchType}}</td>
        <td class="text-center">{{content}}</td>
        <td class="text-center">{{date createdAt}}</td>
        <td class="text-center">{{#if mainCategory}}{{this}}{{else}}-{{/if}}</td>
        <td class="text-center">{{#if subCategory}}{{this}}{{else}}-{{/if}}</td>
        <td class="text-center">{{bookSortType}}</td>
      </tr>
    {{/each}}
  {{else}}
    <tr class="text-center">
      <td colspan="6">조회 결과가 없습니다.</td>
    </tr>
  {{/if}}
  </tbody>
</table>
{{#if page.content}}
  <nav aria-label="Page navigation example">
    {{#paging condition.page page.totalPages}}
      <a href="#" class="page-link" data-page='{{no}}'>{{text}}</a>
    {{/paging}}
  </nav>
{{/if}}