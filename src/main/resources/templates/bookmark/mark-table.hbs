<table class="table table-hover">
  <input type="hidden" id="size" name="size" value="{{condition.size}}">
  <input type="hidden" id="page" name="page" value="{{condition.page}}">
  <caption>Total <kbd>{{#if page.content}}{{number page.totalElements}}{{else}}0{{/if}}</kbd> rows</caption>
  <colgroup>
    <col width="8%">
    <col width="20%">
    <col width="12%">
    <col width="14%">
    <col width="12%">
    <col width="12%">
    <col width="12%">
    <col width="10%">
  </colgroup>
  <thead>
  <tr class="text-center">
    <th scope="col">#삭제</th>
    <th scope="col">제목</th>
    <th scope="col">카테고리</th>
    <th scope="col">출판사</th>
    <th scope="col">출판일</th>
    <th scope="col">판매여부</th>
    <th scope="col">상세 판매정보</th>
  </tr>
  </thead>
  <tbody>
  {{#if page.content}}
    {{#each page.content}}
      <tr class="align-middle">
        <th class="text-center">
          <button class="btn btn-sm btn-outline-danger" data-key="{{bookmarkId}}" name="remove">X</button>
        </th>
        <td class="text-left">{{title}}</td>
        <td class="text-center">{{category}}</td>
        <td class="text-center">{{publisher}}</td>
        <td class="text-center">{{date datetime}}</td>
        <td class="text-center">
          {{#eq sale_yn "Y"}}<span class="badge badge-success">판매</span>{{else}}<span class="badge badge-secondary">미판매</span>{{/eq}}
        </td>
        <td class="text-center">
          <a class="btn btn-outline-dark btn-sm" href="{{url}}"><i class="fa fa-external-link"></i> 사러가기</a>
        </td>
      </tr>
    {{/each}}
  {{else}}
    <tr class="text-center">
      <td colspan="7">조회 결과가 없습니다.</td>
    </tr>
  {{/if}}
  </tbody>
</table>
{{#if page.content}}
  <nav aria-label="Page navigation example">
    {{#paging condition.page page.totalPages}}
      <a href="#" class="page-link" data-page='{{no}}'>{{text}}</a>
    {{/paging}}
  </nav>
{{/if}}